<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_initialization"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.youhan.a4295.InitializationActivity">

    <TextView
        android:text="Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtInstruction"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"
        android:id="@+id/tvName"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Please pick a nickname."
        android:ems="10"
        android:layout_marginTop="16dp"
        android:id="@+id/etName"
        android:layout_below="@+id/tvName"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Please complete the following settings."
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/txtInstruction"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textStyle="normal|bold|italic"
        android:textAllCaps="false"
        android:textColor="@color/cast_expanded_controller_background_color" />

    <Button
        android:text="Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="53dp"
        android:onClick="btInitializationComplete"
        android:id="@+id/btNext"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Profile: (not provided for now)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvProfile"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/etName"
        android:layout_alignParentStart="true" />

</RelativeLayout>
