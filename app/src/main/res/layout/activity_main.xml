<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:padding="0dp"
    tools:context="com.example.youhan.a4295.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="fill_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:padding="0dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:id="@+id/navigation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <ImageButton
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/home"/>

        <ImageButton
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/button1"
            android:src="@drawable/timeline"/>

        <ImageButton
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/button2"
            android:src="@drawable/chat"/>

        <ImageButton
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/button3"
            android:src="@drawable/position"/>

        <ImageButton
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/button4"
            android:src="@drawable/information" />

    </LinearLayout>

    <com.example.youhan.a4295.coverPicture
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/couple" />

    <LinearLayout
        android:id="@+id/functionBar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <ImageButton
            android:id="@+id/functionButton1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:layout_height="80dp"
            android:src="@drawable/sleep"
            android:elevation="0dp"
            android:scaleType="fitCenter"
            android:scrollbarSize="0dp" />

        <ImageButton
            android:id="@+id/functionButton2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@id/functionButton1"
            android:src="@drawable/photo"
            android:elevation="0dp"
            android:scaleType="fitCenter"
            android:scrollbarSize="0dp" />

        <ImageButton
            android:id="@+id/functionButton3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@id/functionButton2"
            android:src="@drawable/calendar"
            android:scaleType="fitCenter"
            android:elevation="0dp"
            android:scrollbarSize="0dp" />

    </LinearLayout>




</LinearLayout>
