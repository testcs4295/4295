<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_position"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:padding="0dp"
    tools:context="com.example.youhan.a4295.Location"
    android:background="#F5F5F5">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar_p"
        android:layout_width="fill_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:padding="0dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:id="@+id/navigation_p"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_alignParentTop="true">

        <ImageButton
            android:id="@+id/button1_p"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/home"/>

        <ImageButton
            android:id="@+id/button2_p"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/button1_p"
            android:src="@drawable/timeline"/>

        <ImageButton
            android:id="@+id/button3_p"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/button2_p"
            android:src="@drawable/chat"/>

        <ImageButton
            android:id="@+id/button4_p"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/button3_p"
            android:src="@drawable/position"/>

        <ImageButton
            android:id="@+id/button5_p"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/button4_p"
            android:src="@drawable/information" />

    </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Partner's update : 21 hours ago"
            android:textAlignment="center"
            android:paddingTop="5dp"
            android:textColor="#FFFFFF"
            android:background="#008b8b"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/profile_photo"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:text="12356KM"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:textSize="30dp"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/profile_photo"/>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="lover_name"
            android:textColor="#008b8b"/>

        <TextView
            android:id="@+id/line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="300dp"
            android:text="address"
            />


    </LinearLayout>

    <ImageView
        android:id="@+id/map_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/couple"/>



</LinearLayout>
